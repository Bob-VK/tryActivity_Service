<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:onClick="onMyButtonClick"
        android:text="startService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CurVal" />

    <TextView
        android:id="@+id/CurVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CurVal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ACTION_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onMyButtonClick"
        android:text="ACTION_Start"
        app:layout_constraintEnd_toEndOf="@+id/startService"
        app:layout_constraintStart_toStartOf="@+id/startService"
        app:layout_constraintTop_toBottomOf="@+id/startService" />

    <Button
        android:id="@+id/ACTION_Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onMyButtonClick"
        android:text="ACTION_Stop"
        app:layout_constraintEnd_toEndOf="@+id/ACTION_Start"
        app:layout_constraintStart_toStartOf="@+id/ACTION_Start"
        app:layout_constraintTop_toBottomOf="@+id/ACTION_Start" />

    <Button
        android:id="@+id/SendRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onMyButtonClick"
        android:text="SendRequest"
        app:layout_constraintEnd_toEndOf="@+id/ACTION_Stop"
        app:layout_constraintStart_toStartOf="@+id/ACTION_Stop"
        app:layout_constraintTop_toBottomOf="@+id/ACTION_Stop" />

    <Button
        android:id="@+id/I_destroy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onMyButtonClick"
        android:text="I_destroy"
        app:layout_constraintEnd_toEndOf="@+id/startService"
        app:layout_constraintStart_toStartOf="@+id/startService"
        app:layout_constraintTop_toBottomOf="@+id/SendRequest" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onMyButtonClick"
        android:text="button_2"
        app:layout_constraintEnd_toEndOf="@+id/I_destroy"
        app:layout_constraintStart_toStartOf="@+id/I_destroy"
        app:layout_constraintTop_toBottomOf="@+id/I_destroy" />
</androidx.constraintlayout.widget.ConstraintLayout>